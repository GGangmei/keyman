{
  "extends": "../../../../tsconfig-base.json",
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "es6",
    "moduleResolution": "Node16",
    "importHelpers": true,
    "inlineSources": true,
    "sourceMap": true,
    "sourceRoot": "keyman",
    // This build-configuration only targets Node and exists solely for unit tests.
    // Also, we need ES6 in order to properly inherit from the Node Worker-type.
    "target": "ES6",
    "lib": ["es6"],
    "types": ["node"],
    "baseUrl": "../",
    "outDir": "../../build/obj",
    "tsBuildInfoFile": "../../build/obj/node/tsconfig.tsbuildinfo",
    "rootDir": "../"
  },
  "include": [
    "*.ts"
  ],
  "references": [
    { "path": "../tsconfig.json" },
    { "path": "../../../web/lm-worker" }
  ]
}