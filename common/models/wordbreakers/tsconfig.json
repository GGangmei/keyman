{
  "extends": "../../../tsconfig-base.json",

  "compilerOptions": {
    "module": "es6",
    "lib": ["es6"],
    "target": "es5",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "baseUrl": "./",
    "outDir": "build/obj",
    "tsBuildInfoFile": "build/obj/tsconfig.tsbuildinfo",
    "rootDir": "./src"
  },
  "references": [
    { "path": "../types" }
  ],
  "include": [
	"src/**/*"
  ],
  "exclude": [
	"node_modules",
	"test/**/*.ts"
  ]
}
