{
  "extends": "../../../tsconfig.esm-base.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "Node16",
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "sourceRoot": "keyman/",
    "target": "es5",
    "types": ["node"],
    "lib": ["DOM", "es6"],
    "baseUrl": "./",
    "outDir": "./build/obj/",
    "tsBuildInfoFile": "./build/obj/tsconfig.tsbuildinfo",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/tools/**/*.ts"]
}
