{
  "extends": "../tsconfig-base.json",

  "compilerOptions": {
    "allowJs": false,
    "lib": ["es6"],
    "module": "es6",
    "moduleResolution": "Node16",
    "target": "es5",

    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "sourceMap": true,
  }
}
