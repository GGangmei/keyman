{
  "extends": "./tsconfig-base.json",

  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "Node16",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "sourceMap": true,
    "lib": ["es6"],
    "experimentalDecorators": true
  }
}
