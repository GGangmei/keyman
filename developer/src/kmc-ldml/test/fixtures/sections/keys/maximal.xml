<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE keyboard3 SYSTEM "../../../../../../../resources/standards-data/ldml-keyboards/techpreview/dtd/ldmlKeyboard3.dtd">
<keyboard3 locale="mt" conformsTo="techpreview">
  <info name="hardware-gap-switch"/>

  <keys>
    <key id="Q" gap="true" />
    <key id="W" layerId="shift" />
    <!-- This key gets a bunch of other status -->
    <key id="q" flicks="flick0" output="q" longPressKeyIds@@="á é í" longPressDefault="é"
        multiTap="ä ë ï" width="3.14159" />
    <key id="w" output="${www}" />
    <flicks id="flick0">
        <flickSegment directions="nw se" keyId@@="ç" />
        <flickSegment directions="ne sw" keyId@@="${ecaret}" />
    </flicks>
  </keys>
  <layers formId="touch" minDeviceWidth="300">
    <layer id="base">
      <row keys="Q q W w" />
    </layer>
  </layers>
  <layers formId="iso">
    <layer id="base">
      <!-- beware: this is mapping ` and 1! -->
      <row keys="Q W" />
    </layer>
    <layer id="shift" modifiers="shift">
      <!-- beware: this is mapping ` and 1! -->
      <row keys="q w" />
    </layer>
  </layers>

  <variables>
    <string id="ecaret" value="ê" />
    <string id="www" value="w" />
  </variables>
</keyboard3>
